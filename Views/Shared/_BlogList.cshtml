@model List<ET_MyBlog_2021_V2.Models.Blogs>


@foreach (var item in Model)
{
    <div class="col-lg-6 col-md-6 mb-5 ">
        <div class="blog-item">

            <img src="@item.ImageURL" alt="" class="img-fluid rounded">

            <div class="blog-item-content bg-white p-4">
                <div class="blog-item-meta  py-1 px-2">
                    @foreach (var etiket in item.Tags)
                    {
                        <span class="text-muted text-capitalize mr-3"><i class="ti-pencil-alt mr-2"></i>@etiket.TagName</span>
                    }
                </div>

                <h3 class="mt-3 mb-3"><a href="blog-single.html">@item.Title</a></h3>
                <p class="mb-4">@item.SubDescription</p>

                <a href="@Url.Action("BlogDetails","Home",new {id= item.BlogId})" class="btn btn-small btn-main btn-round-full">Yazının Devamı</a>
            </div>
        </div>
    </div>

}


